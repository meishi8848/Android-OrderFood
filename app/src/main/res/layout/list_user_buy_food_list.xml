<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/user_buy_food_list_foodImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/login"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:paddingLeft="5dp"
            android:background="@drawable/img_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/user_buy_food_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="东北麻辣烫，烫出新鲜"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="left"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/user_buy_food_list_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="月销售：300份"
                android:gravity="left"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/user_buy_food_list_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="价格：19.19元"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:textColor="#D32F2F"/>

            <TextView
                android:id="@+id/user_buy_food_list_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="描述：来自寒冽凛冬的巧思"
                android:gravity="left"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/user_buy_food_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/jianhao"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/user_buy_food_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="0"

            android:gravity="center_horizontal|center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/user_buy_food_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/jiahao"
            android:padding="3dp"/>

    </LinearLayout>

</LinearLayout>