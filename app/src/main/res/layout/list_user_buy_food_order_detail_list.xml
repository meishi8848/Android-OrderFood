<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/circle_background">

    <ImageView
        android:id="@+id/list_user_buy_food_order_detail_list_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/upimg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/list_user_buy_food_order_detail_list_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="东北麻辣烫"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="×"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/list_user_buy_food_order_detail_list_num"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="28"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:textColor="#F50057"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/list_user_buy_food_order_detail_list_price"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="￥ 100"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        />

</LinearLayout>