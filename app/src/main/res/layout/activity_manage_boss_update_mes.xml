<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bac"
    android:layout_gravity="center_horizontal|center_vertical"
    tools:context=".activity.boss.ManageBossUpdateMesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/boss_manage_update_mes_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="修改店铺信息"
        app:titleTextColor="@color/white"
        android:background="@color/ThemeRed"
        app:navigationIcon="@drawable/back"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/boss_manage_update_head"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/upimg"
                android:layout_marginTop="45dp">
            </ImageView>

            <EditText
                android:id="@+id/boss_manage_update_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入店铺名称"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                />

            <EditText
                android:id="@+id/boss_manage_update_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入店铺描述"
                android:inputType="textMultiLine"
                android:layout_marginTop="10dp"
                android:padding="12dp"

                android:gravity="top"
                android:minLines="5"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:background="@android:drawable/edit_text"
                />

            <EditText
                android:id="@+id/boss_manage_update_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入店铺类型"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                />

            <Button
                android:id="@+id/boss_manage_information_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/ThemeRed"
                android:text="修改"
                android:textColor="#FFFFFF"
                android:foreground="?android:attr/selectableItemBackground"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>