<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.user.frament.ManageMyUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/ThemeRed"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="15dp">

        <!--放头像和账号-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/user_manage_my_head"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/login"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/user_manage_my_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="root"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <!--放商铺名称和简介-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/user_manage_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小米杂货铺"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#F2FFFFFF"/>

            <TextView
                android:id="@+id/user_manage_my_recentAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺简介：卖一些小零食"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_manage_my_finishedOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看完成订单"
                android:foreground="?android:attr/selectableItemBackground"

                android:paddingTop="18dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/yifahuo"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/path"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_manage_my_receiveAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的收货地址"
                android:foreground="?android:attr/selectableItemBackground"

                android:paddingTop="18dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/sh"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/path"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_manage_my_changeinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改个人信息"
                android:foreground="?android:attr/selectableItemBackground"

                android:paddingTop="18dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/xggrxx"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/path"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_manage_my_changepwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:foreground="?android:attr/selectableItemBackground"

                android:paddingTop="18dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/gmm"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/path"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_manage_my_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注销账号"
                android:foreground="?android:attr/selectableItemBackground"

                android:paddingTop="18dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/zx"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/path"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_manage_my_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出账号"
                android:foreground="?android:attr/selectableItemBackground"

                android:paddingTop="18dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:clickable="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/exit"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:drawableRight="@drawable/path"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFDF"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>