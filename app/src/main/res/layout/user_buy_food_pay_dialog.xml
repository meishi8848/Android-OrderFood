<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_buy_food_pay_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/upimg"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/user_buy_food_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="匿名学生"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:id="@+id/user_buy_food_pay_time"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="2024-10-14 13：10"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人："
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/user_buy_food_pay_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天梭"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址："
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/user_buy_food_pay_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下北泽某工地"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/user_buy_food_pay_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19198101145"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收货地址"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_buy_food_pay_addressList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_buy_food_pay_foodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/user_buy_food_pay_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单待处理"
                android:textColor="#FF3D00"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="总计："
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/user_buy_food_pay_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="￥ 114"
                android:textColor="@color/ThemeRed"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/user_buy_food_pay_cancelOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/ThemeRed"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="取消"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/user_buy_food_payOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/ThemeRed"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="支付订单"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>