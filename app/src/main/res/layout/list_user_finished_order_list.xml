<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/circle_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_user_finished_order_list_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/upimg"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/list_user_finished_order_list_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="匿名学生"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/list_user_finished_order_list_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="下单时间：2024-10-14 13：10"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/list_user_finished_order_list_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天梭"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/list_user_finished_order_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下北泽某工地"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/list_user_finished_order_list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19198101145"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_user_finished_order_list_foodList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/list_user_finished_order_list_orderState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单待处理"
            android:textColor="#FF3D00"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="总计："
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:gravity="center_vertical|right"/>

        <TextView
            android:id="@+id/list_user_finished_order_list_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="￥ 114"
            android:textColor="@color/ThemeRed"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/list_user_finished_order_list_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/ThemeRed"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="评论"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>